<Window x:Class="KretaBasicSchoolSystem.Desktop.Views.SchoolSubjects.SchoolSubjectButtons"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KretaBasicSchoolSystem.Desktop.Views.SchoolSubjects"
        mc:Ignorable="d"
        Title="SchoolSubjectButtons" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <local:SchoolSubjectMenu Grid.Row="0"></local:SchoolSubjectMenu>
        <ContentControl Grid.Row="1" Content="{Binding CurrentSchoolSubjectsChildView }"></ContentControl>
    </Grid>
</Window>
